<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#fffcef"
    android:orientation="vertical">
    <FrameLayout
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="370dp"
            android:layout_height="1.2dp"
            android:background="@drawable/line"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기본정보"
            android:textSize="20dp"
            android:textColor="#1C1C1C"/>
        <LinearLayout
            android:layout_marginTop="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="370dp"
            android:layout_height="1.2dp"
            android:background="@drawable/line2"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff2c1">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:layout_gravity="center|left"
            android:src="@drawable/back2"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_gravity="top|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sun2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원정보 수정"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:fontFamily="@font/permanentmarkerregular"
            android:textSize="30dp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="128dp"
        android:layout_width="115dp"
        android:layout_height="118dp"
        android:background="@drawable/profile_rect_shadow">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="128dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_rect">
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_user"/>
            <LinearLayout
                android:id="@+id/pic_modi"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_width="60dp"
                android:layout_height="21dp"
                android:background="@drawable/logout_no">
                <TextView
                    android:layout_marginLeft="18dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="수정"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_marginTop="240dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="370dp"
            android:layout_height="1.2dp"
            android:background="@drawable/line"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:textSize="20dp"
            android:textColor="#1C1C1C"/>
        <LinearLayout
            android:layout_marginTop="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="370dp"
            android:layout_height="1.2dp"
            android:background="@drawable/line2"/>
    </FrameLayout>
    <LinearLayout
        android:layout_marginTop="145dp"
        android:layout_marginLeft="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성명"/>
            <TextView
                android:id="@+id/name_prm_tv"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"/>
            <TextView
                android:id="@+id/email_prm_tv"
                android:layout_marginLeft="17dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/name_modi"
        android:layout_marginTop="148dp"
        android:layout_marginLeft="330dp"
        android:layout_width="60dp"
        android:layout_height="21dp"
        android:background="@drawable/logout_no">
        <TextView
            android:layout_marginLeft="18dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="수정"
            android:textColor="@color/black"/>
    </LinearLayout>
    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:hint="  이메일을 입력하세요"
        android:background="@drawable/profile_rect2"/>
    <LinearLayout
        android:id="@+id/email_send"
        android:layout_marginTop="301.7dp"
        android:layout_marginLeft="330dp"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:background="@drawable/logout_no">
        <TextView
            android:layout_marginLeft="18dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="전송"
            android:textColor="@color/black"/>
    </LinearLayout>
    <EditText
        android:id="@+id/email_ans"
        android:visibility="invisible"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="340dp"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:hint="  인증번호 확인"
        android:background="@drawable/profile_rect2"/>
    <LinearLayout
        android:id="@+id/emailans_check"
        android:visibility="invisible"
        android:layout_marginTop="342.3dp"
        android:layout_marginLeft="330dp"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:background="@drawable/logout_no">
        <TextView
            android:layout_marginLeft="18dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="확인"
            android:textColor="@color/black"/>
    </LinearLayout>
    <TextView
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="375dp"
        android:text="남은 시간 : 03분 00초"
        android:textSize="10dp"
        android:textColor="#A6FFA4A9"/>
    <EditText
        android:id="@+id/new_pw1"
        android:visibility="invisible"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="393dp"
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:hint="  새 비밀번호를 입력하세요"
        android:background="@drawable/profile_rect2"/>
    <EditText
        android:id="@+id/new_pw2"
        android:visibility="invisible"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="433dp"
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:hint="  새 비밀번호를 한번 더 입력하세요"
        android:background="@drawable/profile_rect2"/>
    <LinearLayout
        android:visibility="invisible"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="483dp"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:background="@drawable/profile_rect_shadow"/>
    <LinearLayout
        android:id="@+id/pw_modi"
        android:visibility="invisible"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="473dp"
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:background="@drawable/logout_yes">
        <TextView
            android:layout_marginLeft="140dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:textColor="@color/white"/>
    </LinearLayout>







</FrameLayout>