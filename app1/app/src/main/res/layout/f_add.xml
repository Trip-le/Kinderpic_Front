<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCEF"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff2c1"
        >
        <ImageView
            android:layout_gravity="top|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sun2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구목록"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:fontFamily="@font/permanentmarkerregular"
            android:textSize="30dp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="5">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:src="@drawable/search"
                android:layout_gravity="center|left"
                android:background="#FFEA9F"/>

            <EditText
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="#FFEA9F"
                android:text="친구 아이디 검색"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#B7B3A4"
                android:gravity="center"/>
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:background="@drawable/f_box"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            android:padding="45dp"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="380dp"
                android:layout_height="270dp"
                android:src="@drawable/plain3"
                android:layout_gravity="right|bottom"
                android:layout_margin="10dp"
                android:foreground="#BFFFFCEF"/>
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFEA9F"
                android:gravity="center"
                android:text="신청대기자"
                android:textSize="30dp"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="45dp"
                android:textColor="#DD3F47"/>
            <androidx.recyclerview.widget.RecyclerView
                android:background="@drawable/f_box"
                android:id="@+id/recyclerView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:padding="45dp"/>
        </FrameLayout>

    </LinearLayout>
</LinearLayout>